{
  "name": "ATOMIC FLIX - Streaming d'Anime",
  "short_name": "ATOMIC FLIX",
  "id": "com.atomicflix.app",
  "version": "1.1.0",
  "description": "Plateforme de streaming d'anime moderne avec interface sombre et lecteur intégré",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0A0A1A",
  "theme_color": "#1A1A2E",
  "orientation": "portrait-primary",
  "scope": "/",
  "scope_extensions": [
    {
      "origin": "https://atomic-flix.vercel.app"
    }
  ],
  "lang": "fr",
  "dir": "ltr",
  "iarc_rating_id": "e84b072d-71de-4aac-9b1c-b8f2a43b5d05",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.atomicflix.app",
      "id": "com.atomicflix.app"
    }
  ],
  "icons": [
    {
      "src": "/assets/atomic-logo-round.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/atomic-logo-round.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/atomic-logo-round.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/atomic-logo-round.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "categories": ["entertainment", "video"],
  "screenshots": [
    {
      "src": "/assets/atomic-logo-round.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Interface principale ATOMIC FLIX"
    },
    {
      "src": "/assets/atomic-logo-round.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Version mobile ATOMIC FLIX"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "display_override": ["window-controls-overlay", "standalone"],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "video/*": [".mp4", ".mkv", ".avi"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+atomicflix",
      "url": "/?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "widgets": [
    {
      "name": "Recherche rapide",
      "description": "Rechercher des animes rapidement",
      "tag": "search-widget",
      "ms_ac_template": "generic",
      "data": "search-widget-data",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/assets/atomic-logo-round.png",
          "sizes": "256x256",
          "label": "Widget de recherche ATOMIC FLIX"
        }
      ]
    }
  ],
  "shortcuts": [
    {
      "name": "Rechercher des animes",
      "short_name": "Recherche",
      "description": "Rechercher et découvrir de nouveaux animes",
      "url": "/",
      "icons": [{ "src": "/assets/atomic-logo-round.png", "sizes": "96x96" }]
    }
  ]
}