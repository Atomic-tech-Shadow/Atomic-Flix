{
  "cli": {
    "version": ">= 5.7.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "credentials": "auto"
      }
    },
    "preview": {
      "distribution": "internal", 
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease --no-daemon",
        "credentials": "auto"
      },
      "env": {
        "NODE_ENV": "production",
        "EXPO_USE_HERMES": "false",
        "JAVA_HOME": "$JAVA_HOME_17_X64",
        "GRADLE_OPTS": "-Xmx4096m -XX:MaxMetaspaceSize=512m"
      },
      "cache": {
        "disabled": true
      }
    },

    "production": {
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "credentials": "auto",
        "env": {
          "ANDROID_COMPILE_SDK": "33",
          "ANDROID_BUILD_TOOLS": "33.0.0",
          "ANDROID_MIN_SDK": "21",
          "ANDROID_TARGET_SDK": "33",
          "EXPO_USE_HERMES": "false"
        }
      },
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}