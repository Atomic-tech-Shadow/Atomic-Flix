# Configuration pour builds Expo.dev optimisés
# Ce fichier est utilisé par la plateforme Expo.dev pour optimiser les builds cloud

# Optimisations Android
ANDROID_COMPILE_SDK_VERSION=33
ANDROID_TARGET_SDK_VERSION=33
ANDROID_MIN_SDK_VERSION=21
ANDROID_BUILD_TOOLS_VERSION=33.0.0

# React Native
REACT_NATIVE_VERSION=0.74.1
EXPO_SDK_VERSION=53.0.19

# Optimisations de build
GRADLE_OPTS="-Xmx4g -XX:MaxMetaspaceSize=512m"
ANDROID_GRADLE_PLUGIN_VERSION=8.8.2

# Désactiver les fonctionnalités problématiques
EXPO_USE_HERMES=false
EXPO_USE_FABRIC=false
EXPO_USE_NEW_ARCHITECTURE=false